extends ../layout
block content
  h5 Obreros
  p
    a(href="/obreros/create") Crear nuevo personaje
  -if( obreros )
    table
      thead
        tr
          th Nombre
          th Apellido
          th 
          th
          th
      tbody
        -each obrero in obreros
          tr
            td #{obrero.nombre}
            td #{obrero.apellido}
            td 
              a(href="/obreros/#{obrero._id}/ver") Ver
            td 
              a(href="/obreros/#{obrero._id}/editar") Editar
            td
              form(method="post", action="/obreros/#{obrero._id}/eliminar")
                input(type="hidden", name="_method", value="DELETE")
                a(href="javascript:void(0);", onclick="if(confirm('¿Está seguro que desea eliminar este registro?')){this.parentNode.submit();}") Eliminar
  -else
    p No existen obreros creados
  form(method="post" action="/usuarios/buscador")
    input(type="text", name="buscar", required="required", value="")
    input(type="submit", value="Buscar")
  -if( obreros )
    table#buscar
      thead
        tr
          th Nombre
          th Apellido
      tbody
