extends layout

block content
  .col.12
    .row
      .col.s2
        form(method="post")
          div.container
            label(for="CI").center Ordenar
            select(name="seleccion").browser-default
              option(value='', disabled='', selected='') Seleccione turno
              option(value='turno') Turno
              option(value='cargo') Cargo
              option(value='ci') CI
            input(name="buscar").center
            button.btn.waves-effect.waves-light(type='submit', name='action') Buscar
              i.material-icons.right send
        -if(obrero)
          table#resp.striped.centerd
            thead
              tr
                th Foto
                th Nombre
            tbody
      .col.s10
        h5.center= "OBREROS REGISTRADOS EN LA COOPERATIVA"        
        -if(obreros)
          .container
            table.striped.centered
              thead
                tr
                  th Foto
                  th Nombre
                  th codigo
                  th CI
                  th Cargo
                  th Seccion
                  th Estado
                  th Turno
                  th Horas Trabajadas
              tbody
                each obrero in obreros
                  tr
                    td
                      img#imge(src=obrero.img)
                    td=obrero.nombre
                    td=obrero.codigo 
                    td=obrero.ci
                    td=obrero.cargo
                    td=obrero.seccion
                    td=obrero.estado
                    td=obrero.turno
                    td=obrero.hora
        -else
          p No existen obreros registrados